                              </select>
                          </form>     
                      </div>  
                      <br>
                      <fieldset class="form-group offerStatus">
                        <div class="row">
                          <legend class="col-form-label col-sm-2 pt-0">Offer Status</legend>
                          <div class="col-sm-10">  
                            <div class="form-check" >
                              <input class="form-check-input" type="checkbox"  name="statusChkBx" id="active" value="Active">
                              <label class="form-check-label" for="active">
                                Active
                              </label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="statusChkBx" id="accepted" value="Accepted">
                              <label class="form-check-label" for="accepted">
                                Accepted
                              </label>
                            </div>
                            <div class="form-check" >
                              <input class="form-check-input" type="checkbox" name="statusChkBx"   id="closed" value="Closed">
                              <label class="form-check-label" for="closed">
                                Closed
                              </label>
                            </div>
                            <div class="form-check" >
                                <input class="form-check-input" type="checkbox" name="statusChkBx"   id="cancelled" value="Request Cancelled">
                                <label class="form-check-label" for="cancelled">
                                  Request Cancelled
                                </label>
                              </div>
                          </div>
                        </div>
                      </fieldset>
                      <br> 

            <br>                                
          <button class="btn btn-primary" id="filterSubmitBtn">Submit</button>   
  </div>

    <div class="container">
      <table  class="table table-hover table-bordered "  id="offerTable" style="width:100%">
        </table>
      </div>
</div>
