                                    <label for="model">Choose by Model Offered</label>
                                    <select class="form-control" name="model" id="model-dropdown"> 
                                      <option value= 0>- Select -</option>             
                                    </select>
                            </div>     
                </form>             
        </div>      
      </div> 
                        
                  <div class="form-group">
                      <form  method="GET" id="state-selection-form">
