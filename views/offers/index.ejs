<%- include('../partials/header') %>

<div class="container">
    <h1>Offer Index</h1>

    <h4 id="dealerID"><%=currentUser._id%></h4>

    <h4 id="dealerName"><%=currentUser.username%></h4>
<br>
  <button class="btn btn-primary" id="allOffersBtn">Show ALL Your Offers</button> 
  <br>
  <br>
  <button class="btn btn-primary" data-toggle="collapse"
  data-target="#filterDiv" aria-expanded="false" aria-controls="filterDiv"  id="filterBtn">Filter</button> 
  <br>
  <br>
  <div class="collapse border border-primary rounded" id="filterDiv" >
      <div class="container" >
          <div class="column">
                  <form action="/requests/make" method="POST" id="make-selection-form">
                      <div class="form-group">
                                      <label for="make">Choose By Make Offered:</label>
                                      <select class="form-control" name="make" id="make-dropdown" >  
                                        <option value= 0>- Select -</option>  
                                      </select>
                              </div>                        
                  </form>            
          </div>      
      </div>
      <br>
      <div class="container">
        <div class="column">
                <form  method="GET" id="model-selection-form">
